<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cart_layout_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/accounticon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="SPLASH"
                app:layout_constraintStart_toEndOf="@id/cart_layout_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="24dp"
                android:id="@+id/cart_layout_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:id="@+id/cart_layout_price"
                app:layout_constraintStart_toEndOf="@id/cart_layout_image"
                app:layout_constraintTop_toBottomOf="@id/cart_layout_name"
                android:layout_marginLeft="24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quantity"
                android:id="@+id/cart_layout_quantity"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/cart_layout_merchantName"
                android:layout_marginRight="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="merchantName"
                android:textSize="16dp"
                android:layout_marginLeft="24dp"
                app:layout_constraintTop_toBottomOf="@id/cart_layout_price"
                android:id="@+id/cart_layout_merchantName"
                app:layout_constraintStart_toEndOf="@id/cart_layout_image"/>

            <Button
                android:id="@+id/cart_layout_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@id/cart_layout_quantity"
                app:layout_constraintTop_toBottomOf="@+id/cart_layout_merchantName"
               />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="delete"
                android:id="@+id/cart_layout_delete"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cart_layout_merchantName"
                app:layout_constraintStart_toEndOf="@id/cart_layout_quantity"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>