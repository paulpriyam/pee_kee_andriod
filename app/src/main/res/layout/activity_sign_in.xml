<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@color/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp"></androidx.constraintlayout.widget.Guideline>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guide2"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"></androidx.constraintlayout.widget.Guideline>

    <TextView
        android:id="@+id/emailid"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="email"
        android:textColor="@color/whiskyColor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/enteremail"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@id/guide2"></TextView>

    <TextView
        android:id="@+id/password"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="password"
        android:textColor="@color/whiskyColor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passwordenter"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/enteremail"
        android:layout_margin="16dp"></TextView>

    <EditText
        android:id="@+id/enteremail"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:hint="enter your email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailid"
        android:layout_margin="16dp"></EditText>

    <EditText
        android:id="@+id/passwordenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="enter passowrd"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgorpassword"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/whiskyColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:layout_marginTop="8dp"></TextView>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebooklogin"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:background="#003d99"
        android:text="FaceBook"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toStartOf="@id/guide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or"></com.facebook.login.widget.LoginButton>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googlelogin"
        android:layout_width="180dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide1"
        app:layout_constraintTop_toBottomOf="@id/or"></com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/forgorpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/whiskyColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordenter"
        android:layout_marginTop="24dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an Account?"
        android:id="@+id/dontaccount"
        app:layout_constraintTop_toBottomOf="@id/facebooklogin"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="24sp"
        ></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:id="@+id/signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dontaccount"
        android:layout_marginTop="16dp"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="20sp"
        android:id="@+id/skip"
        app:layout_constraintTop_toBottomOf="@id/signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>